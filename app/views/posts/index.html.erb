<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      
      <th>Post</th>
      <th colspan="3">Poster</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      
        <td><%= post.post %></td>
        <% if user_signed_in? %>
        <td>from <%= post.user.name %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %><br>


